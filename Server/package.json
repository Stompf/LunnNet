{
    "name": "server",
    "version": "0.0.1",
    "description": "LunnNet Server side",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "npm run watch-ts",
        "build": "tsc --pretty",
        "watch-ts": "tsc -w --pretty",
        "serve": "cross-env NODE_ENV=production ts-node src/server.ts",
        "debug-serve": "nodemon -e ts -w ./src -x npm run watch:debug-serve",
        "watch:debug-serve": "node --inspect -r ts-node/register src/server.ts",
        "lint": "tslint -c tslint.json --fix --project tsconfig.json",
        "prettier": "prettier --write \"**/*.ts\"",
        "precommit": "npm run prettier && npm run lint"
    },
    "dependencies": {
        "compression": "^1.7.2",
        "express": "^4.16.3",
        "helmet": "^3.12.1",
        "lodash": "^4.17.10",
        "p2": "^0.7.1",
        "socket.io": "^2.1.1",
        "ts-node": "^6.0.3",
        "typescript-collections": "^1.3.2",
        "winston": "^2.4.2"
    },
    "devDependencies": {
        "@types/compression": "0.0.36",
        "@types/express": "^4.11.1",
        "@types/helmet": "0.0.37",
        "@types/lodash": "^4.14.109",
        "@types/p2": "0.7.31",
        "@types/socket.io": "^1.4.33",
        "@types/winston": "^2.3.9",
        "concurrently": "^3.5.1",
        "cross-env": "^5.1.5",
        "husky": "^0.14.3",
        "nodemon": "^1.17.4",
        "prettier": "1.12.1",
        "tslint": "^5.10.0",
        "typescript": "^2.8.3"
    }
}
