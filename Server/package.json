{
    "name": "server",
    "version": "0.0.1",
    "description": "LunnNet Server side",
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "npm run watch-ts",
        "build": "tsc --pretty",
        "watch-ts": "tsc -w --pretty",
        "serve": "cross-env NODE_ENV=production ts-node src/server.ts",
        "debug-serve": "nodemon -e ts -w ./src -x npm run watch:debug-serve",
        "watch:debug-serve": "ts-node --inspect src/server.ts",
        "lint": "tslint -c tslint.json --fix --project tsconfig.json"
    },
    "dependencies": {
        "compression": "^1.7.1",
        "express": "^4.16.2",
        "helmet": "^3.11.0",
        "lodash": "^4.17.5",
        "p2": "^0.7.1",
        "socket.io": "^2.0.4",
        "ts-node": "^4.1.0",
        "typescript-collections": "^1.3.2",
        "winston": "^2.4.0"
    },
    "devDependencies": {
        "@types/compression": "0.0.35",
        "@types/express": "^4.11.1",
        "@types/helmet": "0.0.37",
        "@types/lodash": "^4.14.102",
        "@types/p2": "0.7.31",
        "@types/socket.io": "^1.4.31",
        "@types/winston": "^2.3.7",
        "concurrently": "^3.5.1",
        "cross-env": "^5.1.3",
        "nodemon": "^1.14.12",
        "tslint": "^5.9.1",
        "typescript": "^2.7.1"
    }
}
