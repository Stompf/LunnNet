{
    "compilerOptions": {
        "outDir": "build/dist",
        "module": "commonjs",
        "target": "es5",
        "lib": ["es6", "dom"],
        "baseUrl": ".",
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true,
        "paths": {
            "src/*": ["src/*"]
        }
    },
    "include": ["../Server/src/typings/**/*.ts", "./src/**/*.ts", "./src/**/*.tsx"],
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts"
    ],
    "types": ["typePatches"]
}
